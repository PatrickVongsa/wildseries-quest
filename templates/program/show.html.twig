{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}
	<div class="container">
		<div class="row mt-3">
			<img class="col-auto mr-3" height="350" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="col align-self-center">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.summary }}</p>
				<p>Catégorie : {{ program.category.name }}</p>
				<strong>Acteurs :</strong>
				<ul>
					{% for actor in program.actors %}
						<li>{{ actor.name }}</li>
					{% else %}
						<li>Aucun acteur pour cette série</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row mt-3">
			<div class="list-group">
				{% for season in seasons %}
					<a href="{{ path('program_season_show', {programId: program.id, seasonId: season.id}) }}" class="list-group-item list-group-item-action" aria-current="true">
						<div class="d-flex w-100 justify-content-between">
							<h5 class="mb-1">{{ loop.index}}
								|
								{{ "season " ~ season.number }}</h5>
						</div>
						<p class="mb-1">{{ season.description }}</p>
					</a>
				{% endfor %}
			</div>
		</div>
	</div>


	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>

{% endblock %}

